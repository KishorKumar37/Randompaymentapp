<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/changecolor" >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="You have to pay the following amount:  " />

    <TextView
        android:id="@+id/randomamt"
        android:layout_width="159dp"
        android:layout_height="46dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="45dp" />

    <TextView
        android:id="@+id/useramt"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="75dp"
        android:text="Click on the buttons to add the respective amounts" />

    <TextView
        android:id="@+id/change"
        android:layout_width="74dp"
        android:layout_height="47dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="135dp" />

    <Button
        android:id="@+id/addOne"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="205dp"
        android:onClick="addOne"
        android:text="One" />

    <Button
        android:id="@+id/addTwo"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignTop="@+id/addOne"
        android:layout_marginStart="95dp"
        android:layout_marginLeft="95dp"
        android:onClick="addTwo"
        android:text="two" />

    <Button
        android:id="@+id/addFive"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/addOne"
        android:layout_marginEnd="99dp"
        android:layout_marginRight="99dp"
        android:onClick="addFive"
        android:text="five" />

    <Button
        android:id="@+id/addTen"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/addOne"
        android:onClick="addTen"
        android:text="ten"/>

</RelativeLayout>